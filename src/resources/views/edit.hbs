<form action='/user/editUser/{{getUser.Id}}?_method=PUT' method='POST'>
    <h2>Add New User</h2>
    <div class='mb-3 mt-3'>
        <input type='hidden' class='form-control' id='Id' value='{{getUser.Id}}' name='Id' />
    </div>
    <div class='mb-3 mt-3'>
        <label for='firstName' class='form-label'>First Name:</label>
        <input
            type='text'
            class='form-control'
            id='firstName'
            value='{{getUser.firstName}}'
            placeholder='Enter first name'
            name='firstName'
        />
    </div>
    <div class='mb-3 mt-3'>
        <label for='lastName' class='form-label'>Last Name:</label>
        <input
            type='text'
            class='form-control'
            id='lastName'
            value='{{getUser.lastName}}'
            placeholder='Enter last name'
            name='lastName'
        />
    </div>
    <div class='mb-3 mt-3'>
        <label for='email' class='form-label'>Email:</label>
        <input
            type='email'
            class='form-control'
            id='email'
            value='{{getUser.email}}'
            placeholder='Enter email'
            name='email'
        />
    </div>
    <div class='mb-3'>
        <label for='password' class='form-label'>Password:</label>
        <input type='password' class='form-control' id='pwd' value='' placeholder='Enter password' name='password' />
    </div>
    <button type='submit' class='btn btn-primary'>Submit</button>
</form>